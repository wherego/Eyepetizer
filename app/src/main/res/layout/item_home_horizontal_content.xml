<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@color/abc_theme_black_7f"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="我是标题"
        android:textColor="@color/text_tab_normal"
        android:textSize="@dimen/text_size_01" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="#科普 / 09-41"
        android:textColor="@color/text_tab_normal"
        android:textSize="@dimen/text_size_03" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dedede" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/image_place_normal" />
</LinearLayout>
